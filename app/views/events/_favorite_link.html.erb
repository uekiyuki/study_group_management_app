<div id="favorite_link_<%= "#{event.id}" %>">
<% if current_user.favorites.find_by(event_id: event.id) %>
<%= link_to 'あとで見るを取り消す', favorite_path(current_user.favorites.find_by(event_id: event.id)), method: :delete, remote: true, class: 'btn waves-effect waves-light' %>
<% else %>
<%= link_to 'あとで見る', favorites_path(event_id: event.id), method: :post, remote: true, class: 'btn waves-effect waves-light' %>
<% end %>
</div>
