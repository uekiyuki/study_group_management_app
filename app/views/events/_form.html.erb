<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'validate' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: '具体的な説明を書きましょう！' %>
  </div>

  <div class="field">
    <%= form.label :event_at %>
    <%= form.date_field :event_at, class: 'datepicker' %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class='field'>
    <%= form.text_field :tag_list, class: "custom-class"  %>
  </div>


  <% Event.tag_counts.each do |tag| %>
    <%= link_to tag.name, new_event_path(params: { tag_name: tag.name }), class: tag.name,remote: true %>
  <% end %>
  <%= form.hidden_field :tag_list, value: @chk.join(',') %>


  <hr>

  <div class="actions">
    <%= form.submit  class: 'btn waves-effect waves-light' %>
  </div>
<% end %>
