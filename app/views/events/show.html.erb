<p>
  <strong>Image:</strong>
  <%= @event.image.attached? ? image_tag(@event.image_resize(200)) : image_tag(Event.find_test_event.image_resize(200))  %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @event.content %>
</p>

<p>
  <strong>開催日:</strong>
  <%= @event.event_at.strftime("%Y/%m/%d") if @event.event_at.present? %>
</p>

<p>
  <strong>開催者:</strong>
  <%= link_to @event.user.name , user_path(@event.user) %>
</p>

<p>
  <strong>定員:</strong>
  <%= "#{@event.capacity}名" %>
</p>

<p>
  <strong>参加人数:</strong>
  <%= "#{@event.participants.count}名" %>
</p>

<p>tags: <%= raw(@event.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></p>

<% if user_signed_in? && current_user != @event.user %>
<%= render 'participate_link', event: @event %>
<%= render 'favorite_link', event: @event %>
<% end %>


<h3>コメント</h3>
<%= render partial: 'comments/form', locals: { comment: @comment, event: @event } if user_signed_in? %>


<div id="comments_area">
<%= render partial: 'comments/index', locals: { comments: @comments, event: @event } %>
</div>

